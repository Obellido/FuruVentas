@model IEnumerable<WebApp.ProductoService.ProductoContract>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de Productos</h2>

<p class="pull-right">

    <a href="@Url.Action("Create")" class="btn btn-success">Registrar Nuevo</a>

</p>
<table class="table" id="ProductoTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PVenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proveedor)
            </th>
           
        </tr>
        </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaCompra)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Medida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PCompra)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PVenta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Proveedor)
                </td>
                
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <script type="text/javascript">
    $(document).ready(function() {
        $("#ProductoTable").DataTable();
    });

    </script>
}
